extends ../layout
block content
	h1 Add Tree
	form.form-horizontal(action='/tree',method='post')
		.control-group
			label.control-label(for='inputTree') Tree
			.controls
				input(type='text', name='tree', id='inputTree', placeholder='Tree')
		.control-group
			label.control-label(for='inputQuantity') Qty
			.controls
				input(type='text', name='quantity', id='inputQuantity', placeholder='Quantity')
		.control-group
			button.btn(type='submit', name='Save') Save

